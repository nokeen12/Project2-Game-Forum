<h1>Games Page</h1>
<p>Select any game you'd like to view.</p>
<a href="/games/add" id="createGuide">Add Game</a>

<div id="guidesHolder">
        {{#each game}}
            <div class="guide">
                <a href="/games/{{titleLink}}">
                    <h1 id="title">{{title}}</h1>
                </a>
            </div>
            {{else}}
                <p>Game couldn't load</p>
        {{/each}}
</div>